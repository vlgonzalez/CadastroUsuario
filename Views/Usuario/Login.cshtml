@model CadastroUsuario.Models.Usuario

@{
    ViewData["Title"] = "Login Usuario";
}

<h1>Login Usuario</h1>

<br/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Logar">
            <div class="form-grup"> 
                <label asp-for="Email" class="control-lable"></label>
                <input asp-for="Email" class="form-control"/>
            </div>
            <div class="form-grup"> 
                <label asp-for="Senha" class="control-lable"></label>
                <input asp-for="Senha" class="form-control"/>
            </div>
        </form>
    </div>
</div>
<br>
<a asp-action="Index">Cadastrar</a>
<a asp-action="RecuperarSenha">Recuperar a senha</a>