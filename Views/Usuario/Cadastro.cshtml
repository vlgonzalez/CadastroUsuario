@model CadastroUsuario.Models.Usuario

@{
    ViewData["Title"] = "Criar novo Usuario";
    @Html.ValidationSummary()

}

<h1>Criar novo Usuario</h1>

<br/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-grup"> 
                <label asp-for="Nome" class="control-lable"></label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-grup"> 
                <label asp-for="Email" class="control-lable"></label>
                <input asp-for="Email" class="form-control"/>
            </div>
            <div class="form-grup"> 
                <label asp-for="Senha" class="control-lable"></label>
                <input asp-for="Senha" class="form-control"/>
            </div>
            <<div class="form-grup"> 
                <label asp-for="ConfirmarSenha" class="control-lable"></label>
                <input asp-for="ConfirmarSenha" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>            
        </form>
    </div>
</div>
<br>
<a asp-action="Index">Voltar</a>